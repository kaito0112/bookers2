<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3">
      <h2>User info</h2>

      <% if current_user.image.attached? %>
        <%= image_tag current_user.image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      <table class = "table">
        <tbody>
          <tr>
            <td>name</td>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%= current_user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <div class = "row">
        <%= link_to edit_user_path, class: 'btn btn-outline-secondary btn-block' %>
      </div>

      <h2 class = "mt-3">New book</h2>

      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Body</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <h2>Books</h2>
    <div class = "col-md-8 offset-md-1">
      <table class = "table table-hoverble-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
      			<tr>
      				<td>
      				  <%= link_to book.title, book_path(book) %>
      				</td>
      				<td><%= book.body %></td>
      			</tr>
      			<% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>