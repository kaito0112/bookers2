<h2>User info</h2>

<%= %>
<table>
  <tbody>
    <tr>
      <td>name</td>
      <td><%= current_user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= current_user.introduction %></td>
    </tr>
  </tbody>
</table>

<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :Opinion %>

  <%= f.submit 'Create Book' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
			</tr>
			<% end %>
  </tbody>
</table>

