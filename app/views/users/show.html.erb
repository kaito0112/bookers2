<div class = "text-success">
  <%= flash[:notice] %>
</div>

<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3">
<%= render 'books/books' %>

<h2 class = "mt-3">New book</h2>

      <%= form_with model: @book do |f| %>
        <div class = "form-group">
          <h4>Title</h4>
          <%= f.text_field :title %>
        </div>
        <div class = "form-group">
          <h4>Opinion</h4>
          <%= f.text_area :body %>
        </div>
        <%= f.submit 'Create Book', class: 'btn btn-success' %>
      <% end %>
    </div>

      <div class = "col-md-8 offset-md-1">
        <h2>Books</h2>

        <table class = "table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan = "3"></th>
            </tr>
          </thead>

          <tbody>
            <% @userbooks.each do |userbook| %>
              <tr>
                <td>
                  <% if userbook.image.attached? %>
                    <%= image_tag userbook.image, size: "80x80" %>
                  <% else %>
                    <%= image_tag 'default-image', size: "80x80" %>
                  <% end %>
                </td>
                <td><%= link_to userbook.title, book_path(userbook.id) %></td>
                <td><%= userbook.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>